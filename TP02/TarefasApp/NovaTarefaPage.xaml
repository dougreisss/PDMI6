<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.NovaTarefaPage"
             BackgroundColor="White">
    <StackLayout>
        <Entry Placeholder="Título" x:Name="txtTitle" />
        <Entry Placeholder="Descrição" x:Name="txtDescription" />
        <Entry Placeholder="Prioridade" x:Name="txtPriority" />
        <Button Text="Adicionar Tarefa" Clicked="AdicionarTarefa" />
    </StackLayout>
</ContentPage>